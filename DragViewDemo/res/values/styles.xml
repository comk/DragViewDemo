<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:background">@android:color/transparent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AlertWindowStyleTop" parent="android:Animation">

        <item name="@android:windowEnterAnimation">@anim/dialog_enter_from_top</item>

        <item name="@android:windowExitAnimation">@anim/dialog_exit_from_top</item>

</style>
    
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar"> 
  
	<item name="android:progressDrawable">@drawable/ratingbar_drawable</item> 
	  
	<item name="android:minHeight">28dip</item> 
	  
	<item name="android:maxHeight">28dip</item> 
	  
	</style>
    
    
    
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/shape_progressbar_circle</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">160dp</item>
        <item name="android:maxHeight">160dp</item>
    </style>
    
    
    
</resources>
